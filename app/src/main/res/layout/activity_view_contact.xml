<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewContact" android:background="#D18509" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/phone" android:textColor="#0766B3"
            android:textSize="16sp" android:textAlignment="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/goBack1" app:layout_constraintHorizontal_bias="0.493"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/email" android:textColor="#0766B3"
            android:textSize="16sp" android:textAlignment="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/goBack1" app:layout_constraintHorizontal_bias="0.494"/>
    <Button
            android:text="Regresar"
            android:layout_width="146dp"
            android:layout_height="42dp"
            android:id="@+id/goBack1" android:background="#0766B3"
            android:fontFamily="sans-serif-smallcaps" android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:id="@+id/name" android:textColor="#0766B3"
            android:textSize="16sp" android:textAlignment="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="168dp" app:layout_constraintBottom_toTopOf="@+id/goBack1"
            app:layout_constraintHorizontal_bias="0.491"/>
    <ImageView
            android:layout_width="165dp"
            android:layout_height="128dp" app:srcCompat="@drawable/contacts"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/name"/>
</android.support.constraint.ConstraintLayout>