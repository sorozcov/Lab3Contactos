<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewContact" android:background="#D18509" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:layout_width="112dp"
            android:layout_height="91dp" app:srcCompat="@drawable/cont"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/createContact"
            app:layout_constraintVertical_bias="0.055"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:ems="10"
            android:id="@+id/phonec"
            android:inputType="phone"
            android:hint="TelÃ©fono"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/createContact" android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/namec"
            android:hint="Nombre"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginBottom="164dp"
            app:layout_constraintBottom_toTopOf="@+id/createContact" android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailc"
            android:hint="Email"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/createContact" android:textSize="14sp"/>
    <Button
            android:text="Crear Contacto"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:id="@+id/createContact" android:background="#0766B3"
            android:fontFamily="sans-serif-smallcaps" android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/goBack2"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Regresar"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:id="@+id/goBack2" android:background="#0766B3"
            android:fontFamily="sans-serif-smallcaps" android:textColor="@android:color/white"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/createContact"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>