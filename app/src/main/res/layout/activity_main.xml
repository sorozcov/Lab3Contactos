<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#D18509" tools:layout_editor_absoluteY="81dp">

    <ListView
            android:layout_width="0dp"
            android:layout_height="253dp"
            android:id="@+id/allContacts"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="107dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="35dp" android:layout_marginEnd="35dp"
            android:background="#0766B3"/>
    <TextView
            android:layout_width="172dp"
            android:layout_height="98dp"
            android:text="Mis Contactos"
            android:textSize="24sp" android:fontFamily="sans-serif-smallcaps" android:textColor="#0766B3"
            android:textAlignment="center"
            android:id="@+id/textView"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/allContacts" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="95dp" app:srcCompat="@drawable/cc"
            android:id="@+id/imageView"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/allContacts"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="44dp"
    />
    <Button
            android:text="Agregar Contacto"
            android:layout_width="167dp"
            android:layout_height="38dp"
            android:id="@+id/newContact" android:background="#0766B3"
            android:fontFamily="sans-serif-smallcaps" android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/allContacts" android:layout_marginBottom="35dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>